{
  "kind": "List",
  "apiVersion": "v1",
  "metadata": {},
  "items": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "oracle-java-jdk",
        "labels": {
          "sdbi": "oracle-java"
        }
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "oracle-java-server-jre",
        "labels": {
          "sdbi": "oracle-java"
        }
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "oracle-java-build",
        "labels": {
          "sdbi": "oracle-java"
        }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "oracle-java-pipeline",
        "labels": {
          "sdbi": "oracle-java"
        },
        "annotations": {
          "pipeline.alpha.openshift.io/uses": "[{\"name\": \"jenkins\", \"kind\": \"DeploymentConfig\"}]"
        }
      },
      "spec": {
        "source": {
          "type": "Git",
          "git": {
            "uri": "ssh://git@stash.six-group.net:22/sdbi/oracle-java.git",
            "ref": "master"
          },
          "sourceSecret": {
            "name": "bitbucket-secret"
          }
        },
        "strategy": {
          "type": "JenkinsPipeline",
          "jenkinsPipelineStrategy": {
            "jenkinsfilePath": "Jenkinsfile"
          }
        },
        "triggers": [
            {
                "type": "ImageChange",
                "imageChange": {
                    "from": {
                        "kind": "ImageStreamTag",
                        "name": "six-rhel7:latest"
                    }
                }
            }
        ]
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "oracle-java-build",
        "labels": {
          "sdbi": "oracle-java"
        }
      },
      "spec": {
        "runPolicy": "Serial",
        "source": {
          "type": "Git",
          "git": {
            "uri": "ssh://git@stash.six-group.net:22/sdbi/oracle-java.git"
          },
          "sourceSecret": {
            "name": "bitbucket-secret"
          }
        },
        "strategy": {
          "type": "Docker",
          "dockerStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "name": "six-rhel7:latest"
            },
            "forcePull": true
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "oracle-java-build:tmp"
          }
        }
      }
    }
  ]
}